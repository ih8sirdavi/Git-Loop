{
    "Repositories": [
        {
            "Name": "Git Loop",
            "Path": ".",
            "Branch": "main",
            "RemoteUrl": "git@github.com:USERNAME/Git-Loop.git",
            "AutoSync": true
        }
    ],
    "JobTimeoutSeconds": 300,
    "MaxRetries": 3,
    "SyncInterval": 30,
    "LogRetention": 5,
    "MaxLogSizeMB": 10,
    "MinOperationInterval": 250,
    "RetryBackoffMultiplier": 2,
    "MaxRetryDelaySeconds": 30,
    "ResourceMonitoring": {
        "Enabled": true,
        "MaxCpuPercent": 80,
        "MaxMemoryPercent": 75,
        "CheckIntervalSeconds": 5
    },
    "ParallelOperations": {
        "Enabled": true,
        "MaxParallelJobs": 3
    },
    "NetworkChecks": {
        "Enabled": true,
        "TimeoutSeconds": 10,
        "RetryAttempts": 3
    },
    "AutoStash": {
        "Enabled": true,
        "StashTimeout": 300
    },
    "Logging": {
        "PerformanceMetrics": true,
        "OperationTiming": true,
        "ResourceUsage": true,
        "DetailLevel": "Verbose"
    },
    "UI": {
        "Themes": {
            "Light": {
                "Background": "#F8F8F8",
                "TextPrimary": "#3C3C3C",
                "TextSecondary": "#787878",
                "ButtonBackground": "#F0F0F0",
                "ButtonHover": "#E6E6E6",
                "ButtonBorder": "#C8C8C8",
                "Success": "#28A745",
                "Error": "#DC3545",
                "Warning": "#FFC107"
            },
            "Dark": {
                "Background": "#1E1E1E",
                "TextPrimary": "#F0F0F0",
                "TextSecondary": "#B4B4B4",
                "ButtonBackground": "#2D2D2D",
                "ButtonHover": "#3C3C3C",
                "ButtonBorder": "#464646",
                "Success": "#28A745",
                "Error": "#DC3545",
                "Warning": "#FFC107"
            }
        },
        "ShowProgress": true,
        "ShowEstimates": true,
        "ShowResourceUsage": true,
        "RefreshIntervalMs": 500
    }
}
