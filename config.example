{
    "Repositories": [
        {
            "Name": "Git Loop",
            "Path": ".",
            "Branch": "main",
            "RemoteUrl": "git@github.com:USERNAME/Git-Loop.git",
            "AutoSync": true
        }
    ],
    "JobTimeoutSeconds": 300,
    "MaxRetries": 3,
    "SyncInterval": 30,
    "LogRetention": 5,
    "MaxLogSizeMB": 10,
    "MinOperationInterval": 250,
    "RetryBackoffMultiplier": 2,
    "MaxRetryDelaySeconds": 30,
    "ResourceMonitoring": {
        "Enabled": true,
        "MaxCpuPercent": 80,
        "MaxMemoryPercent": 75,
        "CheckIntervalSeconds": 5
    },
    "ParallelOperations": {
        "Enabled": true,
        "MaxParallelJobs": 3
    },
    "NetworkChecks": {
        "Enabled": true,
        "TimeoutSeconds": 10,
        "RetryAttempts": 3
    },
    "AutoStash": {
        "Enabled": true,
        "StashTimeout": 300
    },
    "Logging": {
        "PerformanceMetrics": true,
        "OperationTiming": true,
        "ResourceUsage": true,
        "DetailLevel": "Verbose",
        "LogFile": "GitLoop.log"
    },
    "UI": {
        "Theme": "Light",
        "Themes": {
            "Light": {
                "Background": "#FFFFFF",
                "TextPrimary": "#2C2C2C",
                "TextSecondary": "#5C5C5C",
                "ButtonBackground": "#EAEAEA",
                "ButtonHover": "#D5D5D5",
                "ButtonBorder": "#BFBFBF",
                "Success": "#34C759",
                "Error": "#FF3B30",
                "Warning": "#FF9500"
            },
            "Dark": {
                "Background": "#121212",
                "TextPrimary": "#E0E0E0",
                "TextSecondary": "#A8A8A8",
                "ButtonBackground": "#1F1F1F",
                "ButtonHover": "#292929",
                "ButtonBorder": "#3A3A3A",
                "Success": "#4CAF50",
                "Error": "#F44336",
                "Warning": "#FFB74D"
            }
        },
        "ShowProgress": true,
        "ShowEstimates": true,
        "ShowResourceUsage": true,
        "RefreshIntervalMs": 500
    }
}
