{
    "Repositories": [
        {
            "Name": "Git Loop",
            "Path": ".",
            "Branch": "main",
            "RemoteUrl": "git@github.com:USERNAME/Git-Loop.git",
            "AutoSync": true,
            "NotificationLevel": "All",
            "CustomActions": [],
            "SyncRules": {
                "AutoMerge": false,
                "FetchTags": true,
                "PushTags": false
            }
        }
    ],
    "SyncInterval": 30,
    "MaxRetries": 3,
    "LogRetention": 100,
    "LogFile": "GitLoop.log",
    "MaxLogSize": "5MB",
    "Theme": "Light",
    "UI": {
        "Themes": {
            "Light": {
                "Background": "#F8F8F8",
                "TextPrimary": "#3C3C3C",
                "TextSecondary": "#787878",
                "ButtonBackground": "#F0F0F0",
                "ButtonHover": "#E6E6E6",
                "ButtonBorder": "#C8C8C8",
                "Success": "#28A745",
                "Error": "#DC3545",
                "Warning": "#FFC107"
            },
            "Dark": {
                "Background": "#1E1E1E",
                "TextPrimary": "#F0F0F0",
                "TextSecondary": "#B4B4B4",
                "ButtonBackground": "#2D2D2D",
                "ButtonHover": "#3C3C3C",
                "ButtonBorder": "#464646",
                "Success": "#28A745",
                "Error": "#DC3545",
                "Warning": "#FFC107"
            }
        }
    },
    "System": {
        "StartWithWindows": false,
        "StartMinimized": false,
        "MinimizeToTray": true,
        "ShowNotifications": true,
        "NotificationSettings": {
            "SyncSuccess": true,
            "SyncError": true,
            "NewCommits": true,
            "Conflicts": true
        },
        "QuickActions": {
            "DoubleClickTray": "ShowWindow",
            "MiddleClickTray": "QuickSync"
        }
    },
    "Performance": {
        "MaxParallelJobs": 3,
        "ResourceLimit": {
            "CPU": 50,
            "Memory": "256MB"
        },
        "SmartScheduling": true
    },
    "Security": {
        "UseCredentialManager": true,
        "RequireAuthentication": false,
        "AccessControl": {
            "AllowRemoteControl": false,
            "AllowedHosts": []
        }
    },
    "Integration": {
        "EnableWebhooks": false,
        "Webhooks": [],
        "ChatPlatform": {
            "Enable": false,
            "Platform": "None",
            "WebhookUrl": ""
        }
    },
    "Advanced": {
        "CustomScripts": {
            "PreSync": "",
            "PostSync": "",
            "OnError": ""
        },
        "DebugMode": false,
        "CompactMode": false
    }
}
